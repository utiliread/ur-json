{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    // @parcel/transformer-typescript-tsc transformer is required for emitDecoratorMetadata=true to actually emit "design:type" metadata,
    // see https://parceljs.org/getting-started/migration/#typescript
    "emitDecoratorMetadata": false,
    "strict": true,
    "rootDir": "src",
    "lib": ["ES2018"],
    "types": ["mocha", "reflect-metadata"]
  }
}
